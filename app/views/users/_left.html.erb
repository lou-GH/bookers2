<div><%= flash[:notice] %></div>

<h1>User info</h1>

<div>

  <%= image_tag user.get_profile_image(100,100) %>
  <table class = "table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>

  <% if user.id == current_user.id %>
    <p><%= link_to "設定アイコン",edit_user_path(user) %></p>
  <% end %>
</div>



<h2>New book</h2>

<%= form_with model: book,url: books_path, method: :post do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<div><%= f.submit 'Create Book' %></div>

<% end %>
