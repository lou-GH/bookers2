<div><%= flash[:notice] %></div>

<div class = "col-md-3">
  <h1>User info</h1>



  <%= image_tag user.get_profile_image(100,100) %>
  <table class = "table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>

  <% if user.id == current_user.id %>
    <div class="row">
      <button type="button" class="btn btn-outline-secondary">
        <%= link_to edit_user_path(user) do %>
          <i class="fa-solid fa-user-gear" style="color:dark;"></i>
        <% end %>
      </button>
    </div>
  <% end %>

</div>


<h2>New book</h2>

<%= form_with model: book,url: books_path, method: :post do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<div><%= f.submit 'Create Book' %></div>

<% end %>
