<h1>User info</h1>

<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
  　<% end %>
  </ul>
<% end %>


<%= form_with model: @user do |f| %>

<p>Name</p>
<label for="inputName"></label>
<%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>


<p>Image</p>
<%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>

<p>Introduction</p>
<%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" %>

<%= f.submit 'Update User' %>

<% end %>
