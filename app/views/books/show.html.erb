<script src="https://kit.fontawesome.com/6fd84a1e7d.js" crossorigin="anonymous"></script>
<%= render 'users/left', user: @user, book: @book_new %>

<h1>Book detail</h1>

<table class = "table">
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(@book) do %>
          <%= image_tag @book.user.get_profile_image(100,100) %>
          <%= @book.user.name %>
        <% end %>
      </td>
      <td><%= @book.title %></td>
      <td>
        <%= link_to book_path(@book.id) do %>
          <%= @book.body %>
        <% end %>
      </td>
      <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
      <td><%= link_to "Destroy", books_path(@book.id),method: :delete, "data-confirm"=>"本当に消しますか？" %></td>
    </tr>
  </tbody>

</table>
