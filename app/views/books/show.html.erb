<%= render 'users/left', user: @user, book: @book_new %>

<h1>Book detail</h1>

<table class = "table">
  <tbody>
    <tr>
      <td><%= image_tag @book.user.get_profile_image(100,100) %></td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
      <td><%= link_to "Destroy", books_path(@book.id),method: :delete, "data-confirm"=>"本当に消しますか？" %></td>
    </tr>
  </tbody>

</table>
