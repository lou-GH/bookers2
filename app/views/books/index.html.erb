<h1>Books</h1>
<% @books.each do |book| %>

<table>
<thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.opinion %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", books_path(book.id),method: :delete, "data-confirm"=>"本当に消しますか？" %></td>
    </tr>
</tbody>

</table>

<% end %>

