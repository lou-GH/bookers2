<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

   <body class="d-flex flex-column vh-100">
    <header class="navbar navbar-dark bg-dark">
      <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
          <a class="navbar-brand p-3" href="/">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to user_path(current_user.id), class: 'nav-link text-white' do %>
            <i class="fa-solid fas fa-home" style="color:white;"></i>Home
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to users_path, class: 'nav-link text-white' do %>
            <i class="fa-solid fas fa-users" style="color:white;"></i>Users
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to books_path, class: 'nav-link text-white' do %>
            <i class="fa-solid fas fa-book-open" style="color:white;"></i>Books
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-white' do %>
            <i class="fa-solid fas fa-sign-out-alt" style="color:white;"></i>Log out
          <% end %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to root_path, class: 'nav-link text-white' do %>
            <i class="fa-solid fas fa-home" style="color:white;"></i>Home
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to about_path, class: 'nav-link text-white' do %>
            <i class="fa-solid fas fa-link" style="color:white;"></i>About
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to new_user_registration_path, class: 'nav-link text-white' do %>
            <i class="fa-solid fas fa-user-plus" style="color:white;"></i>Sign up
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to new_user_session_path, class: 'nav-link text-white' do %>
            <i class="fa-solid fas fa-sign-in-alt" style="color:white;"></i>Log in
          <% end %>
        </li>
      <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main class="mb-auto">
      <div><%= flash[:notice] %></div>
    <%= yield %>
    </main>

    <footer class="bg-white text-dark pt-5 pb-4">
      <div class="container">
        <div class="row no-gutters">
          <div class="col-md-4">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>

  </body>


</html>
